<?xml version="1.0" encoding="utf-8"?>
<com.makina.collect.android.widget.UndoBarView xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:id="@+id/undoBarView"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_gravity="bottom"
                                               android:background="@color/actionbarBackgroundColor"
                                               android:orientation="horizontal">

    <TextView
        android:id="@android:id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="?attr/listPreferredItemPaddingLeft"
        android:paddingRight="?attr/listPreferredItemPaddingRight"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceSmallInverse"
        tools:ignore="RtlHardcoded"/>

    <Button
        android:id="@android:id/button1"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_selector"
        android:gravity="center"
        android:text="@string/undo"
        android:textColor="?colorPrimaryDark"/>

</com.makina.collect.android.widget.UndoBarView>