<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Collect.MainLayout"
    android:background="@drawable/bg_dashboard"
    android:orientation="vertical" >

    <!--
        <ListView
        android:id="@+id/listView"
        style="@style/Collect.List" />
    -->

    <RelativeLayout
        android:id="@+id/relativeLayout_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="50dip"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/dashboard_download"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/dashboard_download" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/dashboard_download"
            android:text="Telecharger un formulaire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/dashboard_edit"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/dashboard_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/dashboard_edit"
            android:text="Remplir un formulaire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/dashboard_save"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/dashboard_saved" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/dashboard_save"
            android:text="Sauvegarder mes formulaire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/dashboard_send"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/dashboard_send" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/dashboard_send"
            android:text="Mes formulaires Ã  Envoer" />
    </RelativeLayout>

</LinearLayout>